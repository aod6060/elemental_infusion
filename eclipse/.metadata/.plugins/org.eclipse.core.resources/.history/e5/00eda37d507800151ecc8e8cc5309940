package com.derf.ei.multiblock;

import net.minecraft.block.Block;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.world.World;

public abstract class EIMultiBlock implements IMultiBlock {
	@Override
	public void update(World world, int x, int y, int z) {}

	@Override
	public void writeToNBT(NBTTagCompound compound) {}

	@Override
	public void readFromNBT(NBTTagCompound compound) {}
	
	protected boolean isVoidStone(Block block) {
		return block.getUnlocalizedName().equals("tile.void_stone");
	}
	
	protected boolean isVoidStoneItemInput(Block block) {
		return block.getUnlocalizedName().equals("tile.void_stone_item_input");
	}
	
	protected boolean isVoidStoneItemOutput(Block block) {
		return block.getUnlocalizedName().equals("tile.void_stone_item_output");
	}
	
	protected boolean isFireBlock(Block block) {
		return block.getUnlocalizedName().equals("tile.fire_block");
	}
}
