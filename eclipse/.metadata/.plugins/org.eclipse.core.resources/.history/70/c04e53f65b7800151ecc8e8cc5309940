package com.derf.ei.multiblock;

import net.minecraft.init.Blocks;
import net.minecraft.world.World;

import com.derf.ei.block.EIBlocks;

public class EIMultiBlockAirTotem extends EIMultiBlockTotem {
	public EIMultiBlockAirTotem() {
		this.addBlockRecipe(Blocks.iron_block, EIBlocks.airIronBlock, 3.0f);
		this.addBlockRecipe(Blocks.diamond_block, EIBlocks.airDiamondBlock, 6.0f);
	}
	
	@Override
	public void update(World world, int x, int y, int z) {
		// TODO Auto-generated method stub
		super.update(world, x, y, z);
		
		if(this.isMultiBlockComplete(world, x, y, z, EIBlocks.airBlock)) {
			//System.out.println("Multi Block Complete");
			this.checkSlotExist(world, x, y, z);
			this.updateSlots(world);
		}
	}
}
