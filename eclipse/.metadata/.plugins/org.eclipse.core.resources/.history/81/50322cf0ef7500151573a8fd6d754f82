package com.derf.ei.item;

import com.derf.ei.EIType;

import net.minecraft.item.Item;

public final class EIItems {
	
	/*
	 * Elemental Dusts
	 * 
	 * - fire element dust
	 * - water element dust
	 * - air element dust
	 * - earth element dust
	 * 
	 * There are only 4 for now.
	 * I might add in darkness and
	 * light element
	 */
	// Fire Dust
	public static Item fireDust;
	// Water Dust
	public static Item waterDust;
	// Air Dust
	public static Item airDust;
	// Earth Dust
	public static Item earthDust;
	
	public static void create() {
		
		fireDust = new EIItemDust("fire_dust", EIType.FIRE);
		waterDust = new EIItemDust("fire_dust", EIType.WATER);
		airDust = new EIItemDust("fire_dust", EIType.AIR);
		earthDust = new EIItemDust("fire_dust", EIType.EARTH);
		
	}
}
