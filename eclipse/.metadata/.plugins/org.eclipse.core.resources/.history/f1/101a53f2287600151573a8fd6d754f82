package com.derf.ei.block;

import java.util.Random;

import net.minecraft.block.material.Material;
import net.minecraft.item.Item;

public class EIBlockItemDrop extends EIBlock {

	private Item drop;
	
	public EIBlockItemDrop(String name, Material material, float hardness, float res, String tool, int level, SoundType sound, Item drop) {
		super(name, material, hardness, res, tool, level, sound);
		// TODO Auto-generated constructor stub
		this.drop = drop;
	}

	@Override
	public Item getItemDropped(int p_149650_1_, Random p_149650_2_,
			int p_149650_3_) {
		// TODO Auto-generated method stub
		return this.drop;
	}

	@Override
	public int damageDropped(int p_149692_1_) {
		// TODO Auto-generated method stub
		return 0;
	}
	
	@Override
	public int quantityDropped(int meta, int fortune, Random random) {
		// TODO Auto-generated method stub
		return 1;
	}

	
	
}
